<div class = 'alert_commande'>
    Mes livres.
</div>

{% if  livres|length == 0 %}
               
                    <h2> Vous n'avez aucun livre. Veuillez en ajouter <a href="{{ path('pays_new') }}">ici</a> </h2>
{% endif %}                  

{% if  source =='supprimerLivre' %}
    <div id = 'alert'>
        Livre supprimé avec succès !!!
    </div>
{% endif %}
{% for livre in livres|reverse %}
                    <div class='Livres'>
                        <div class='image_livres'>
                            {% if livre.saisie %}
                                <img src="{{ asset('/Images/'~ livre.image) }}" alt="image" width="150">  
                            {% else %}
                                <img src="{{ livre.image}}" alt="image" width="150">
                            {% endif %}
                        </div>
                        <div class='infos_livres'>
                          
                            <div class='prop' ><span class='ti' >Titre:</span> {{ livre.titre }} </div> 
                            <div class='prop' ><span class='ti' >Auteur:</span> {{livre.auteur.nomComplet}} </div> 
                            <div class='prop' ><span class='ti' >Catégorie:</span> {{livre.categorie.nomCategorie}} </div>  
                            <div class='prop' ><span class='ti' >Langue:</span> {{ livre.langue }} </div>  
                        
                            <div class='prop' ><span class='ti' >Date de publication:</span> {{ livre.dateDePublication }} </div>  
                            <div class='prop' ><span class='ti' >Nombre de pages:</span> {{ livre.nombrePages }} </div>  
                            <div class='prop' ><span class='ti' >Nombre de points:</span> {{ livre.nombrePoints }} </div>  
                        
                        </div>
                        <div class='options'>   
                           
                            <a href="{{ path('livre_edit', {'id': livre.id}) }}"><h6 class='echange'>Modifier</h6></a>
                           
                            <a href="{{ path('supprimer_livres', {'id': livre.id}) }}" onclick="return confirm('Cette action est irréversible. Etes-vous sur de vouloir supprimer ce livre?');"><h6 class='echange_c'>Supprimer </h6></a>                        
                        
            
                        </div>
                       
                    </div>
                    
{% endfor %}
<div id ='retour'>
    <button id="boutton" class="btn" onclick= "history.back()">{{ button_label|default('Retour à la page précédante.') }}</button>
</div>
<script>
    document.setTimeOut(function(){
        document.getElementById("")
    },2000)
</script>